<div ng-app="myApp" ng-controller="myctrn" ng-init="PageLoad()">
    <div id="layout-wrapper">

        <div class="container-fluid">

            <div class="display_adds_parent">
                <div class="display_adds_view_box display_adds_2_col">
                    <!-- start page title -->
                    <div class="row">
                        <div class="col-12">
                            <div class="page-title-box d-flex align-items-center justify-content-between">
                                <h4 class="mb-0">Broker Bill Format Master</h4>
                                @*<div class="page-title-right">
                                        <a href="/BrokerBillEntry/BrokerBillList" class="px-2 btn btn-dark"><i class="las la-angle-left font-size-18"></i> Back to List</a>
                                    </div>*@
                            </div>
                        </div>
                    </div>
                    <!-- end page title -->
                    <!-- Working Area Start -->
                    <div class="card">
                        <div class="card-body">
                            <div class="row form_2">
                                <div class="col-sm-12 col-md-6 mb-3 d-flex">
                                    <label for="txt_Sr_No" class="mb-0">Sr No:</label>
                                    <input type="text" id="txt_Sr_No" ng-model="txt_Sr_No" class="form-control" autocomplete="off" />
                                </div>
                                <div class="col-sm-12 col-md-6 mb-3 d-flex">
                                    <label class="mb-0">Broker:</label>
                                    <select id="ddlBroker" ng-model="ddlBroker" ng-options="v.ID as v.Name for v in Accounts" ng-change="Setvalue()" class="form-select select2">
                                        <option ng-option value="">Select Broker</option>
                                    </select>
                                </div>
                                <div class="col-sm-12 col-md-6 mb-3 d-flex">

                                    <label for="txt_Segment" class="mb-0">Segment:</label>
                                    <input type="hidden" ng-model="SaveBREntry.ContractNoteName" />
                                    <select id="ddlInvestmentType" ng-model="ddlInvestmentType" class="form-select select2" ng-change="Setvalue()">

                                        <option ng-option value="" selected="selected">Select Segment Type</option>
                                        <option ng-option value="0">Equity</option>
                                        <option ng-option value="1"> F & O</option>
                                        <option ng-option value="3">MCX</option>
                                        <option ng-option value="4">Currency</option>
                                        <option ng-option value="5">NCDEX</option>


                                    </select>

                                </div>
                                <div class="col-sm-12 col-md-6 mb-3 d-flex">
                                    <label for="ddlFileType" class="mb-0">File Type:</label>
                                    <select id="ddlFileType" ng-model="ddlFileType" class="form-select select2" ng-change="fnchangeformattype()">
                                        <option ng-option value="">Select File Type</option>
                                        <option ng-option value="PDF"> PDF </option>
                                        <option ng-option value="EXCEL">EXCEL</option>
                                        <option ng-option value="html">HTML</option>
                                    </select>
                                </div>

                                <div class="col-sm-12 col-md-6 mb-3 d-flex">
                                    <label for="ddl_File_Extension_Type" class="mb-0">File Extension Type:</label>
                                    <select id="ddl_File_Extension_Type" ng-model="ddl_File_Extension_Type" onselect="Setvalue()" class="form-select select2">
                                        <option value="" selected="selected">Select File Extension Type</option>
                                        <option value=".pdf"> .pdf </option>
                                        <option value=".xlsx"> .xlsx </option>
                                        <option value=".xls"> .xls </option>
                                        <option value=".html"> .html </option>

                                    </select>
                                </div>
                                <div class="col-sm-12 col-md-6 mb-3 d-flex">
                                    <label for="txt_Description" class="mb-0">Description:</label>
                                    <input type="text" id="txt_Description" ng-model="txt_Description" class="form-control" />
                                </div>



                                <div class="col-sm-12 col-md-6 mb-3 d-flex">
                                    <label class="mb-0">Choose Sample file:</label>
                                    <input type="file" class="form-control" id="FileUpload" onchange="encodeImgtoBase64New(this,'filedata')" ng-model="uploadfileurl">
                                    <input type="hidden" id="filedata" />
                                </div>
                                <div class="col-sm-12 col-md-6 mb-3 d-flex">
                                    <label for="ddl_File_Type" class="mb-0">Display In List:</label>
                                    <input type="checkbox" id="chk_DisplayInList" name="chk_DisplayInList" ng-model="chk_DisplayInList" ng-checked="chk_DisplayInList" />
                                </div>
                                <div class="col-sm-12 col-md-6 mb-3 d-flex">
                                    <label for="ddl_File_Type" class="mb-0">Is Trade File:</label>
                                    <input type="checkbox" id="chk_IsTradeFile" name="chk_IsTradeFile" ng-model="chk_IsTradeFile" ng-checked="chk_IsTradeFile" />
                                </div>
                                <div class="col-sm-12 col-md-6 mb-3 d-flex">
                                    <label for="ddl_File_Type" class="mb-0">Combined Format:</label>
                                    <input type="checkbox" id="chk_CombinedFile" name="chk_CombinedFile" ng-model="chk_CombinedFile" ng-checked="chk_CombinedFile" />
                                </div>


                                <div class="col-sm-12">
                                    <div class="text-center mt-3 mb-3">
                                        <button ng-click="FnReset()" type="button" class="btn btn-secondary">Reset</button>
                                        <button ng-click="FnFinalSubmit()" type="button" class="btn btn-primary">{{btntext}}</button>
                                        <div style="display:none;" class="loader-wrapper" id="loader-1">
                                            <div id="loader"></div>
                                        </div>
                                    </div>

                                    <div class="pagination_box w-100 mb-3 d-sm-flex justify-content-end">
                                        <div class="float-sm-end">
                                            <uib-pagination class="pagination MYPAGECSS" total-items="Brokerformats.length" max-size="10" ng-model="page"
                                                            ng-change="pageChanged()" previous-text="&lsaquo;" next-text="&rsaquo;" items-per-page=10></uib-pagination>
                                        </div>
                                    </div>
                                    <div class="table-responsive">
                                        <table class="table table-hover sr-table table-bordered mb-0" style="width:100%">
                                            <thead class="table-light">
                                                <tr>
                                                    <th>#</th>
                                                    <th>Description  <input type="text" class="form-control " ng-model="search.Description" placeholder="Description"></th>
                                                    <th>File Type  <input type="text" class="form-control " ng-model="search.FileType" placeholder="File Type"></th>
                                                    <th>File Extension  <input type="text" class="form-control " ng-model="search.FileExtension" placeholder="File Extension"></th>
                                                    @*<th>Investment Type  <input type="text" class="form-control " ng-model="search.txt_Segment" placeholder="Investment Type"></th>*@
                                                    <th>Broker <input type="text" class="form-control " ng-model="search.BrokerName" placeholder="Broker"></th>

                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr ng-repeat="data in Brokerformats| filter:search | limitTo:10:10*(page-1)">
                                                    <td>{{$index+1}}</td>
                                                    @*<td>{{data.txt_Sr_No}} </td>*@
                                                    <td>{{data.Description}}</td>
                                                    <td>{{data.FileType}}</td>
                                                    <td>{{data.FileExtension}}</td>
                                                    @*<td>{{data.txt_Segment}}</td>*@
                                                    <td>{{data.BrokerName}}</td>

                                                    <td class="whitespace_nowrap">
                                                        <a href="javascript:;" ng-click="FndeleteItems(data)" class="px-2 btn btn-outline-danger"><i class="las la-trash-alt font-size-18"></i></a>
                                                        <a href="javascript:;" ng-click="FnEditItems(data)" class="px-2 btn btn-outline-primary"><i class="las la-pencil-alt font-size-18"></i></a>
                                                    </td>

                                                </tr>

                                            </tbody>
                                        </table>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="display_adds display_adds_right text-center">
                    <img src="https://via.placeholder.com/970x90.png/007BFF/FFFFFF?text=Irecord+Ads" class="mobile_adds mb-3" alt="" />
                    <img src="https://via.placeholder.com/160x601.png/007BFF/FFFFFF?text=Irecord+Ads" class="desktop_adds" alt="" />
                    <!-- <img src="https://via.placeholder.com/160x600.png/007BFF/FFFFFF?text=Irecord+Ads" alt="" /> -->
                </div>
            </div>
        </div> <!-- container-fluid -->
        <!-- End Page-content -->


        <footer class="footer">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-6">
                        <script>document.write(new Date().getFullYear())</script> <i class="las la-copyright"></i> iRecord.
                    </div>
                </div>
            </div>
        </footer>

        <!-- end main content-->

    </div>
    <!-- END layout-wrapper -->
