
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/AngScripts/jquery-3.6.0.js"></script>
<script src="~/AngScripts/jquery-3.6.0.min.js"></script>
<script src="~/AngScripts/angular.js"></script>
@section Scripts {
    <meta charset="utf-8">
<title>Bonus Entry :: iRock</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    @*<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>*@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <link rel="stylesheet" href="~/css/select2.min.css" />
    <link rel="stylesheet" href="~/css/bootstrap-datepicker3.min.css" />
    <link rel="stylesheet" href="~/css/line-awesome.min.css" />
    <link rel="stylesheet" href="~/css/theme-color.css" />
    <link rel="stylesheet" href="~/css/app.min.css" />
    <link rel="stylesheet" href="~/css/custom-body.css" />

  
    <style>
        .main-content {
            margin-left: 121px !important;
            overflow: hidden;
        }

        .select2-container {
            box-sizing: border-box;
            display: inline-block;
            margin: 0;
            position: relative;
            vertical-align: middle;
            width: 100% !important;
        }

        div#layout-wrapper {
            background-color: white;
            color: black;
        }
    </style>
}
<div  ng-app="myApp" class="main-content">

    <div ng-controller="myctrn"  id="myctrn" ng-init="PageLoad()" class="page-content">
        <div class="container-fluid">

            <div class="display_adds display_adds_top text-center mb-3">
                <img src="https://via.placeholder.com/970x90.png/007BFF/FFFFFF?text=Irecord+Ads" alt="">
            </div>

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box d-flex align-items-center justify-content-between">
                        <h1 class="mb-0">Bonus Entry Admin</h1>

                        <div class="page-title-right">
                            <a href="javascript:;" class="px-2 btn btn-dark"><i class="las la-angle-left font-size-18"></i> Back to Index</a>
                        </div>

                    </div>
                </div>
            </div>
            <!-- end page title -->
            <!-- Working Area Start -->
            <div class="card">
                <div class="card-body">

                    <div class="row form_2 mb-3">
                        <div class="col-sm-12 col-md-6 mb-3 d-flex">
                            <label class="mb-0">Select Script:</label>
                            <select class="form-select select2 " ng-change="OnchngeScript()"   id="ddl_Script" ng-model="details.ddl_Script" ng-options="x.Script_ID as x.SCRIPTNAME for x in Info_Script" >
                                <option ng-option value="">Select Script</option>
                            </select>
                        </div>

                        <div class="col-sm-12 col-md-6 mb-3 d-flex">
                            <label class="mb-0">Record Date:</label>
                            <input type="text"  id="TXT_RecordDate" ng-model="details.TXT_RecordDate" class="form-control datepicker" data-date-format="dd-mm-yyyy">
                        </div>
                        <div class="col-sm-12 col-md-6 mb-3 d-flex">
                            <label class="mb-0">Existing ISIN:</label>
                            <input type="text" id="TXT_ExistingISIN" ng-model="details.TXT_ExistingISIN" class="form-control" readonly="">
                        </div>
                        <div class="col-sm-12 col-md-6 mb-3 d-flex">
                            <label class="mb-0">New ISIN:</label>
                            <input type="text" id="TXT_NewISIN" ng-model="details.TXT_NewISIN" class="form-control">
                        </div>
                        <div class="col-sm-12 col-md-6 mb-3 d-flex">
                            <label class="mb-0">Bonus Qty Per:</label>
                            <input type="number" id="TXT_BonusQtyPer" ng-model="details.TXT_BonusQtyPer" class="form-control">
                        </div>
                        <div class="col-sm-12 col-md-6 mb-3 d-flex">
                            <label class="mb-0">Share:</label>
                            <input type="number" id="TXT_Share" ng-model="details.TXT_Share" class="form-control">
                        </div>
                        <div class="col text-center">
                            <input type="button" ng-click="fnSubmit()"  class="btn btn-primary" value="Save In Bonus Master">
                        </div>
                    </div>

                    <div class="table-responsive table-small">
                        <table class="table defaultTable table-hover table-bordered mb-0">
                            <thead class="table-light">
                                <tr>
                                    					
                                    
                                    <th>
                                        <span class="">Sr. No</span>
                                    </th>
                                    <th>
                                        <span class="">Script Name</span>
                                    </th>
                                    <th>
                                        <span class="">Record Date</span>
                                    </th>
                                    <th>
                                        <span class="">Existing ISIN</span>
                                    </th>
                                    <th>
                                        <span class="">New ISIN</span>
                                    </th>
                                    <th>
                                        <span class="">Per Qty</span>
                                    </th>
                                    <th>
                                        <span class="">Bonus Qty</span>
                                    </th>
                                   
                                </tr>
                            </thead>
                            <tbody>
                                					
                               
                                <tr ng-repeat="data in Info_data">
                                    <td>{{$index+1}}</td>
                                    <td>{{data.ScriptName}}</td>
                                    <td>{{data.RecordDate}}</td>
                                    <td>{{data.ExistingISIN}}</td>
                                    <td>{{data.NewISIN}}</td>
                                    <td>{{data.PerQty}}</td>
                                    <td>{{data.BonusQty}}</td>
                                   
                                </tr>
                              
                            </tbody>
                        </table>
                    </div>

                    <div class="col-sm-12 text-center mt-3">
                        <input type="button" class="btn btn-primary" value="Post In Respective Demat">
                    </div>

                </div>
            </div>
            <!-- Working Area End -->

        </div> <!-- container-fluid -->
    </div>
    <!-- End Page-content -->


    <footer class="footer">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-6">
                    <script>document.write(new Date().getFullYear())</script>2021 <i class="las la-copyright"></i> iRecord.
                </div>
                <!-- <div class="col-sm-6">
                    <div class="text-sm-end d-none d-sm-block">
                        Crafted with <i class="mdi mdi-heart text-danger"></i> by <a href="https://themesbrand.com/" target="_blank" class="text-reset">Themesbrand</a>
                    </div>
                </div> -->
            </div>
        </div>
    </footer>
</div>

<script src="~/js/jquery-3.5.1.min.js"></script>
<script src="~/js/jquery-migrate-3.3.2.js"></script>
<script src="~/js/jquery-ui.min.js"></script>
<script src="~/js/popper.min.js"></script>
<script src="~/js/bootstrap.min.js"></script>

<script src="~/js/metisMenu.min.js"></script>
<script src="~/js/simplebar.min.js"></script>
<script src="~/js/app.js"></script>

<script src="~/js/bootstrap-datepicker.min.js"></script>
<script src="~/js/select2.min.js"></script>
<script src="~/AngularDataFunction/AngularDataFunction.js"></script>
<script src="~/AngScripts/BonusEntry.js"></script>
<script>
    $.noConflict();
    jQuery(document).ready(function ($) {

        $(".select2").select2({
            maximumSelectionLength: 3
        });

        $('.datepicker').datepicker({
            format: "dd-mm-yyyy",
            autoclose: true,
            todayHighlight: true
        });
    });
</script>

