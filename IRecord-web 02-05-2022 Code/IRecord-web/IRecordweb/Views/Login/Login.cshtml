@model IRecordweb.Models.USER
@{
    ViewBag.Title = "Login";
    Layout = null;
}


<link href="~/Content/bootstrap.min.v4.css" rel="stylesheet" />
<link href="~/Content/line-awesome.min.css" rel="stylesheet" />
<link href="~/Content/theme-color.css" rel="stylesheet" />
<link href="~/Content/owl.carousel.min.css" rel="stylesheet" />
<link href="~/Content/app.min.css" rel="stylesheet" />
<link href="~/Content/custom-login.css" rel="stylesheet" />

<script src="~/js/jquery-3.5.1.min.js"></script>
<script src="~/js/owl.carousel.min.js"></script>
<script>
    $(document).ready(function () {
        var owl = $('.left_banner');
        owl.owlCarousel({
            items: 1,
            loop: true,
            margin: 0,
            dots: true,
            autoplay: true,
            autoplayTimeout: 3600,
            autoplayHoverPause: true
        });
    });
</script>
<script>
    window.onload = function () {    
        document.getElementsByTagName('body')[0].classList.add('login_body');
    };
</script>
@section Scripts {

   
    @if (ViewBag.Message != null)
        {
        <script type="text/javascript">
            window.onload = function () {
                alert('@ViewBag.Message');
            };
        </script>
        }
}

@using (Html.BeginForm("Login", "Login", FormMethod.Post)) //"Index", "Home", FormMethod.Post
    {
    @*@Html.AntiForgeryToken()*@

    <div class="Login_box d-flex">
        <div class="cms_display_data d-flex align-items-center">
            <div class="w-100 text-center">
                <div class="left_banner owl-carousel owl-theme">
                    <div class="item">
                        <img src="~/images/slide-1.png" alt="Slide 1" />
                    </div>
                    <div class="item">
                        <img src="~/images/slide-2.png" alt="Slide 2" />
                    </div>
                    <div class="item">
                        <img src="https://via.placeholder.com/500x500.png/007BFF/FFFFFF?text=Irecord+Ads+500x500" alt="">
                    </div>
                </div>
            </div>
        </div>
        <div class="cms_reg_form d-flex">
            <div class="login_parent d-flex flex-column justify-content-center align-items-center">
                <div class="login_main_box d-flex align-items-center">
                    <div class="login_box">
                        <div class="row">
                            <div class="col-sm-12 col-md-12 white_box">
                                <div class="padding_box">
                                    <div class="text-center">
                                        <img class="logo" src="~/Content/images/logo2.png" />
                                        <h3 class="w-100 mt-5 mb-4">Login to iRecord</h3>
                                    </div>
                                    <div class="form_box">
                                        <div class="mb-3 d-flex flex-column">
                                            <div class="form_input d-flex flex-column-reverse">
                                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Email ID" })
                                                @Html.LabelFor(m => m.UserName)
                                            </div>
                                            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="mb-3 d-flex flex-column">
                                            <div class="form_input d-flex flex-column-reverse">
                                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                                @Html.LabelFor(m => m.Password)
                                            </div>
                                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                        </div>
                                        @*<input type="radio" name="usertype" id="rdSuperAdmin" checked value="1" />*@
                                        @Html.RadioButtonFor(m => m.SuperAdmin, true, new { @class = "radio", @name = "usertype" })
                                        <label>IsSuperAdmin</label>

                                        @Html.RadioButtonFor(m => m.SuperAdmin, false, new { @class = "radio", @name = "usertype", @checked = "checked" })
                                        <label>IsNormalUser</label>

                                        <!-- <div class="form-group d-flex flex-wrap justify-content-between mt-0">
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="remember_id">
            <label class="form-check-label" for="remember_id">Remember Me</label>
        </div>

        <a href="javascript:;">Forgot Password?</a>
    </div> -->

                                        <input type="submit" value="Login" class="btn w-100 btn-block btn-primary" />

                                        <div class="text-center mt-3 d-flex flex-column">
                                            <a class="forgot_password w-100 mb-2" href="/Login/ForgotPassword">Forgot Password?</a>
                                            <a class="forgot_password w-100" href="/Onboarding/Offer">Register/Sign Up Now</a>
                                        </div>
                                    </div>
                                    <div id="dvMessage" style="display:none" class="alert alert-danger">
                                        <strong>Error!</strong>
                                        <span>@ViewBag.Message</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
        @*<div class="checkbox">
                @Html.Label("Remember Me", new { @for = "RememberMe" })
                @Html.CheckBoxFor(m => m.RememberMe)
            </div>*@
        @*<input type="hidden" name="ReturnUrl" value="@Request.QueryString["ReturnUrl"]" />*@

    }
@*@Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")*@
@if (@ViewBag.Message != null)
{
        <script type="text/javascript">
            $(function () {
                $("#dvMessage").show();
            });
        </script>
}
