
@{
    Layout = "~/Views/Shared/_BLayout.cshtml";
}
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/line-awesome/1.3.0/line-awesome/css/line-awesome.min.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="~/AngScripts/jquery-3.6.0.js"></script>
    <script src="~/AngScripts/jquery-3.6.0.min.js"></script>
    <script src="~/AngScripts/angular.js"></script>
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.v4.js"></script>

    <link rel="stylesheet" href="~/css/bootstrap.min.v4.css">
    <link rel="stylesheet" href="~/css/style.css">
    <style>
        .wrapper form {
            width: 100%;
            max-width: 720px !important;
            margin: 0 auto;
        }

        i.fa.fa-sign-in {
            font-size: 32px;
        }
    </style>
</head>
<body>

    <div ng-app="myApp" class="wrapper">
        <form action="" ng-controller="myctrn" ng-init="PageLoad()">
            <div class="text-center mb-4">
                <img src="~/images/logo.png" alt="IRecord" />
            </div>

            <div class="tab-content mt-4">
                <!-- 2 -->
                <div class="tab-pane fade active show" id="tab_2">
                    <h2 class="text-center mb-4">Financial Year</h2>
                    <a ng-click="ngopenmaster()" class="btn ml-2 btn-outline-primary btn-sm d-flex align-items-center">
                        <i class="las la-plus"></i>
                        Add Financial Year
                    </a>
                    <div id="master" style="display:none" class="row">
                        <div class="col-sm-9">
                            <select id="selectyear" ng-model="details.selectyear" ng-options="x.ID as x.NAME for x in Info" class="form-control select2">
                                <option ng-option value="">Select Broker Financial Year</option>

                            </select>
                        </div>
                        <div class="col-sm-2">
                            <a ng-click="fnadd()" class="btn ml-2 btn-outline-primary btn-sm d-flex align-items-center" style="
    font-size: 20px;
    width: 81px;
">
                                <i class="las la-plus"></i>
                                Add
                            </a>
                        </div>
                    </div>
                    <div class="container">
                        <div class="row">
                            <div class="col-12">
                                <div ng-show="showLoader" style="
    color: black;
    font-size: 36px;
    text-align: center;
">
                                    Loading Data...
                                    @*<img src="source">*@
                                </div>
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th scope="col">Sr No</th>
                                            <th scope="col">Code</th>
                                            <th scope="col">From Date</th>
                                            <th scope="col">To Date</th>
                                            <th scope="col">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        <tr ng-repeat="datatable in InfoAllYear">
                                            <th scope="row">
                                                {{$index+1}}

                                            </th>
                                            <td>{{datatable.Code}} </td>
                                            <td>{{datatable.FromDate}}</td>
                                            <td>{{datatable.ToDate}}</td>
                                            <td>
                                                <a ng-click="fnsetFinancialYear(datatable)" class="btn"><i class="fa fa-sign-in" aria-hidden="true"></i></a>

                                            </td>
                                        </tr>

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

        </form>
        <div class="modal fade" id="modal_1" tabindex="-1" data-backdrop="static" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Select Default Broker</h5>
                        <button type="button" onclick="document.getElementById('modal_1').style.display='none'" class="close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="form-row mb-3">
                            <div class="form-holder">
                                <label for="">
                                    Select Broker:
                                </label>
                                <div class="d-flex">
                                    <select id="selectbrokerpopup" ng-model="details.selectbrokerpopup" ng-options="x.ID as x.NAME for x in Info_Broker" class="form-control select2">
                                        <option ng-option value="">-- Select Broker --</option>

                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-holder">
                                <label for="">
                                    Select Demat A/c:
                                </label>
                                <div class="d-flex">
                                    <select id="selectDematpopup" ng-model="details.selectDematpopup" ng-options="x.ID as x.NAME for x in Info_Demate" class="form-control select2">
                                        <option ng-option value="">-- Select Demat A/c --</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" ng-click="FN_demat_with_broker()" class="btn btn-primary" data-dismiss="modal">Add</button>
                        <button type="button" class="btn btn-light" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/AngularDataFunction/AngularDataFunction.js"></script>
    <script src="~/AngScripts/FinancialYear.js"></script>
</body>

