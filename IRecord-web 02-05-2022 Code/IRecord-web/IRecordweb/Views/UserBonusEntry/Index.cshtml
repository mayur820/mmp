                                        <td>{{data.Share_Investment_Ac}}</td>
                                        <td>{{data.Share_Trading_Ac}}</td>
                                        <td>{{data.TotalQty}}</td>
                                        <td>{{data.Total_Bonus_Qty}}</td>
