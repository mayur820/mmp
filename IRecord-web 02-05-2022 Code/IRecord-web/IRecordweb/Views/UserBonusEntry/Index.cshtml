<div ng-app="myApp" class="">

    <div ng-controller="myctrn" id="myctrn" ng-init="PageLoad()" class="">
        <div class="w-100">
            @{
                if (Request.QueryString["Uid"] != null)
                {
                    <input type="hidden" id="hf_CActionView" value="@Request.QueryString["Uid"].ToString()" />


