<script>
    $(document).ready(function () {
        

        $("#Date").datepicker({
            dateFormat: "dd-mm-yy",
            changeMonth: true,
            changeYear: true
        });
        $(".select2").select2({
            maximumSelectionLength: 3
        });
    });
</script>