
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="display_adds display_adds_top text-center mb-3">
    <img src="https://via.placeholder.com/970x90.png/007BFF/FFFFFF?text=Irecord+Ads" alt="" />
</div>


<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0">JV Reports 1</h4>
            <div class="page-title-right">
                <div class="dropdown">
                    <a href="javascript:;" class="btn btn-primary dropdown-toggle" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="las la-file-download font-size-18"></i> <i class="las la-angle-down font-size-12"></i>
                    </a>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" href="javascript:;"><i class="las la-file-pdf"></i> PDF</a>
                        <a class="dropdown-item" href="javascript:;"><i class="las la-file-excel"></i> Excel</a>
                        <a class="dropdown-item" href="javascript:;"><i class="las la-file"></i> Notepad</a>
                    </div>
                </div>
                <a href="jsvascript:;" class="px-2 btn btn-primary"><i class="las la-print font-size-18"></i></a>
                <a href="jsvascript:;" class="px-2 btn btn-primary"><i class="las la-envelope font-size-18"></i></a>
            </div>
        </div>
    </div>
</div>
<!-- end page title -->
<!-- Working Area Start -->
<div class="card">
    <div class="card-body">
        <div class="search_filter mb-3">
            <div class="row">
                <div class="col-sm-12 col-md-4 mb-3 d-flex flex-column justify-content-end">
                    <!-- <div class="d-flex">
                        <label class="col mb-0">From Date:</label>
                        <label class="col mb-0">To Date:</label>
                    </div> -->
                    <div class="input-daterange input-group flex-nowrap" id="datepicker6" data-date-format="dd-mm-yyyy" data-date-autoclose="true" data-provide="datepicker" data-date-container='#datepicker6'>
                        <div class="d-flex align-items-center pe-1">
                            <input type="text" class="form-control text-start" name="start" placeholder="Start Date">
                            <i class="las la-calendar"></i>
                        </div>
                        <div class="d-flex align-items-center pe-1">
                            <input type="text" class="form-control text-start" name="end" placeholder="End Date">
                            <i class="las la-calendar"></i>
                        </div>
                    </div>
                </div>
                <div class="col-sm-12 col-md-4 mb-3 d-flex flex-column justify-content-end">
                    <!-- <label class="col mb-0">Select Ledger:</label> -->
                    <select class="form-select select2">
                        <option>-- Select Party Name --</option>
                        <option>XYZ Party 1</option>
                        <option>XYZ Party 2</option>
                        <option>XYZ Party 3</option>
                    </select>
                </div>
                <div class="col-sm-12 col-md-2 mb-3 align-self-end">
                    <input type="submit" class="btn btn-primary" value="Search">
                </div>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-hover table-bordered mb-0">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Date</th>
                        <th>JV No</th>
                        <th>Account Head</th>
                        <th>Amount</th>
                        <th>Narration</th>
                        <th>Remark</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1</td>
                        <td>15-05-2021</td>
                        <td>JV001</td>
                        <td>ABC</td>
                        <td>500000</td>
                        <td>asfj</td>
                        <td>asfj</td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td>18-05-2021</td>
                        <td>JV001</td>
                        <td>ABC</td>
                        <td>500000</td>
                        <td>asfj</td>
                        <td>asfj</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- Working Area End -->
                  
@section Scripts {
    <link href="~/Content/select2.min.css" rel="stylesheet" />

    <script src="~/js/select2.min.js"></script>
    <script>
        $(document).ready(function () {
            $(".select2").select2({
                maximumSelectionLength: 3
            });
        });
    </script>
}