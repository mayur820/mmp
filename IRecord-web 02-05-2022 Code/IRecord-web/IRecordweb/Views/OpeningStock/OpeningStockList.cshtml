
@{
    ViewBag.Title = "OpeningStockList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*--------*Angular JS* SECTION------*@
<script src="~/AngScripts/jquery-3.6.0.js"></script>
<script src="~/AngScripts/jquery-3.6.0.min.js"></script>
<script src="~/AngScripts/angular.js"></script>
<script src="~/AngScripts/ngStorage.min.js"></script>
<script src="//angular-ui.github.io/bootstrap/ui-bootstrap-tpls-1.0.3.js"></script>

<div ng-app="myApp" ng-controller="myctrn" ng-init="PageLoad()" id="" class="">
    <div id="layout-wrapper">

        <!-- ========== Left Sidebar Start ========== -->
        <!-- Left Sidebar End -->
        <!-- ============================================================== -->
        <!-- Start right Content here -->
        <!-- ============================================================== -->



        <div class="container-fluid">

            <div class="display_adds display_adds_top text-center mb-3">
                <img src="https://via.placeholder.com/970x90.png/007BFF/FFFFFF?text=Irecord+Ads" alt="" />
            </div>

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box d-flex align-items-center justify-content-between">
                        <h4 class="mb-0">Opening Stock List</h4>

                        <div class="page-title-right">

                            <input type="submit" class="btn btn-primary  add-on" value="Add New" onclick="location.href='/OpeningStock/OpeningStock'" />
                        </div>

                    </div>
                </div>
            </div>
            <!-- end page title -->
            <!-- Working Area Start -->
            <div class="card">
                <div class="card-body">
                    <div style="display:none" class="search_filter mb-3">
                        <div class="row">
                            <div class="col-sm-12 col-md-4 mb-3 d-flex flex-column justify-content-end">
                                <label class="mb-0">Datewise Bill:</label>

                            </div>

                            <div class="col-sm-12 col-md-2 mb-3 align-self-end">
                                <input type="submit" class="btn btn-primary" value="Search">
                            </div>
                        </div>
                    </div>

                    <div class="pagination_box w-100 mb-3 d-sm-flex justify-content-end">
                        <div class="float-sm-end">
                            <uib-pagination class="pagination MYPAGECSS" total-items="Info.length" ng-model="page"
                                            ng-change="pageChanged()" previous-text="&lsaquo;" next-text="&rsaquo;" items-per-page=10></uib-pagination>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table id="mytable" class="table table-bordered table-striped">
                            <thead class="table-light">
                                <tr>
                                    <th>#</th>
                                    <th>Trans No <input type="text" class="form-control " ng-model="search.Trans_no" placeholder="Trans No"> </th>
                                    <th>Bill No <input type="text" class="form-control " ng-model="search.Bill_no" placeholder="Bill No"></th>
                                    <th>Trans Date <input type="text" class="form-control " ng-model="search.Date" placeholder="Trans Date"></th>
                                    <th>Amount <input type="text" class="form-control " ng-model="search.Amount" placeholder="Amount"> </th>
                                    <th>Net Amount <input type="text" class="form-control " ng-model="search.Net_amt" placeholder="Net Amount"></th>
                                    <th>Book Type <input type="text" class="form-control " ng-model="search.Book_Type" placeholder="Book Type"></th>
                                    <th>Action</th>
                                </tr>
                            </thead>

                            <tbody>
                                @*Sr_No			Amount	Narr1*@
                                <tr ng-repeat="data in Info | filter:search | limitTo:10:10*(page-1)">
                                    <td>{{$index+1}}</td>
                                    <td>{{data.Trans_no}}</td>
                                    <td>{{data.Bill_no}}</td>
                                    <td>{{data.Date}}</td>
                                    <td>{{data.Amount}}</td>
                                    <td>{{data.Net_amt}}</td>
                                    <td>{{data.Book_Type}}</td>
                                    @*<td><a class="btn btn-sm btn-outline-primary" href="javascript:;">{{data.Net_Amount}}</a></td>*@
                                    <td class="whitespace_nowrap">
                                        <ul class="list-inline mb-0">

                                            <li class="list-inline-item">
                                                <a href="/OpeningStock/ViewOpeningStockData?TrnsNo={{data.Trans_no}}&&Status=View" class="px-2 btn btn-outline-primary"><i class="las la-search font-size-18"></i></a>
                                            </li>
                                            <li class="list-inline-item">
                                                <a href="/OpeningStock/ViewOpeningStockData?TrnsNo={{data.Trans_no}}&&Status=Edit" class="px-2 btn btn-outline-primary"><i class="las la-pencil-alt font-size-18"></i></a>
                                            </li>
                                            <li class="list-inline-item">
                                                <a href="javascript:void(0);" ng-click="Isdeleted(data)" class="px-2 btn btn-outline-danger"><i class="las la-trash-alt font-size-18"></i></a>
                                            </li>
                                        </ul>
                                    </td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- Working Area End -->

        </div> <!-- container-fluid -->
        <!-- End Page-content -->
        <!-- end main content-->

    </div>
    <!-- END layout-wrapper -->
    <!-- Right bar overlay-->
    <div class="rightbar-overlay"></div>


    <!-- Modal 1 -->

</div>

<script src="../js/jquery-3.5.1.min.js"></script>
<script src="../js/popper.min.js"></script>
<script src="../js/bootstrap.min.js"></script>

<script src="../js/metisMenu.min.js"></script>
<script src="../js/simplebar.min.js"></script>
<script src="../js/app.js"></script>

<script src="../js/bootstrap-datepicker.min.js"></script>
<script>
    $(document).ready(function () {
        $('.datepicker').datepicker({
            format: "dd-M-yy",
            autoclose: true,
            todayHighlight: true
        });
    });

</script>
<script type="text/javascript" charset="utf8" src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.8.2.min.js"></script>
<script type="text/javascript" charset="utf8" src="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.4/jquery.dataTables.min.js"></script>
<script>
    function loaddt() {


        $.noConflict();
        jQuery(document).ready(function ($) {
            $('#mytable').DataTable();
        });
    }

</script>
<script src="../js/custom-script.js"></script>

<script src="~/AngularDataFunction/AngularDataFunction.js"></script>
<script src="~/AngScripts/OpeningStockList.js"></script>


