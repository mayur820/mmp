@model IRecordweb.Models.OpeningStock
@{
    Layout = "~/Views/Shared/_BLayout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/line-awesome/1.3.0/line-awesome/css/line-awesome.min.css">

<link rel="stylesheet" href="~/css/bootstrap.min.v4.css">
<link rel="stylesheet" href="~/css/style.css">
<link rel="stylesheet" href="css/select2.min.css">

<div class="wrapper">
   @using (Html.BeginForm("OnboardingOpStock", "OpeningStock", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
        @Html.AntiForgeryToken()

        <div class="text-center mb-4">
            <img src="~/Content/images/logo2.png" alt="IRecord" />
        </div>

        <div class="checkout-wrap">
            <ul class="checkout-bar nav_tabs d-flex">
                <li class="visited"><a href="#tab_1"></a></li>
                <li class="visited"><a href="#tab_2"></a></li>
                <li class="visited"><a href="#tab_3"></a></li>
                <li class="visited"><a href="#tab_4"></a></li>
                <li class="visited"><a href="#tab_5"></a></li>
                <li class="visited"><a href="#tab_6"></a></li>
                <li class="visited"><a href="#tab_7"></a></li>
                <li class="visited"><a href="#tab_8"></a></li>
                <li class="visited"><a href="#tab_9"></a></li>
                <li class="visited"><a href="#tab_10"></a></li>
                <li class="active"><a href="#tab_11"></a></li>
                <li class=""><a href="#tab_12"></a></li>
                <li class=""><a href="#tab_13"></a></li>
                <li class=""><a href="#tab_14"></a></li>
                <li class=""><a href="#tab_15"></a></li>
                <li class=""><a href="#tab_16"></a></li>
                <li class=""><a href="#tab_17"></a></li>
                <li class=""><a href="#tab_18"></a></li>
                <li class=""><a href="javascript:;"></a></li>
            </ul>
        </div><br />
        @*</div>*@
        <div class="w-100" id="tab_10">


            <h2 class="text-center">
                Dear Vishal
            </h2><br />

            <h5><strong>Update Opening Stock </strong></h5><br />

            <div class="form-row">
                <div class="form-holder">
                    <label for="">
                        Select Demat A/c:
                    </label>
                    <div class="form-holder w-100">
                        @Html.DropDownListFor(model => model.DematAc, ViewBag.DematAC as SelectList, "Select Demat A/c", htmlAttributes: new { @class = "form-control" })
                        <i class="las la-angle-down"></i>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="form-holder">
                    <label for="">
                        Member Name:
                    </label>
                    <div class="custom-file">
                        @Html.TextBoxFor(model => model.FileUpload, htmlAttributes: new { @class = "form-control", type = "file", value = "FileName" })
                        <label class="custom-file-label" for="customFile">Choose file</label>
                    </div>
                    <div class="d-flex mt-2">
                        <a href="javascript:;" class="btn btn-sm btn-light">
                            <em class="las la-file-download"></em>
                            Sample File
                        </a>
                    </div>
                </div>
            </div>


            <div class="text-center mt-4">
                @*<span class="btn btn-primary text-uppercase">Upload</span>*@
                <input  class="btn btn-primary text-uppercase" type="submit" value="Upload" name="Upload" id="Upload"/>
            </div>

            <div class="">
                <h3 class="text-center mt-3 mb-2">View Portfolio</h3>
@*                <div class="form-row">*@
                    <div class="form-holder portfolio_box">
                        <strong>Investment:</strong>
                        <ul class="d-flex flex-column">
                            <li class="d-flex justify-content-between">
                                <label>Shares</label>
                                <span>10,000.00</span>
                            </li>
                            <li class="d-flex justify-content-between">
                                <label>Mutual Funds</label>
                                <span>10,000.00</span>
                            </li>
                            <li class="d-flex justify-content-between">
                                <label>FD</label>
                                <span>10,000.00</span>
                            </li>
                            <li class="form_total d-flex justify-content-between">
                                <label>Investment Value</label>
                                <span>30,000.00</span>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="form-row mt-3">
                    <div class="form-holder portfolio_box">
                        <strong>Market:</strong>
                        <ul class="d-flex flex-column">
                            <li class="d-flex justify-content-between">
                                <label>Shares</label>
                                <span>10,000.00</span>
                            </li>
                            <li class="d-flex justify-content-between">
                                <label>Mutual Funds</label>
                                <span>10,000.00</span>
                            </li>
                            <li class="d-flex justify-content-between">
                                <label>FD</label>
                                <span>10,000.00</span>
                            </li>
                            <li class="form_total d-flex justify-content-between">
                                <label>Market Value</label>
                                <span>30,000.00</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="text-right form-row mt-4">
                <a href="~/BrokerBillEntry/OnboardingContractNote" class="btn btn-light ml-auto text-uppercase skip-tab">Skip This Step</a>
                <a href="~/BrokerBillEntry/OnboardingContractNote" class="btn btn-primary ml-1 text-uppercase next-tab">Submit</a>
            </div>
           
        @*</div>*@
        }
    </div>
